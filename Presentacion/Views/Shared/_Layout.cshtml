


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/plugins/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" asp-append-version="true" />
    
    <!--<link rel="stylesheet" href="~/Presentacion.styles.css" asp-append-version="true" />-->
</head>
<body class="app sidebar-mini">
    <!-- Navbar-->
    <header class="app-header">
        <a class="app-header__logo" href="/">System</a>
        <!-- Sidebar toggle button-->
        <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">
            <li class="app-search">
                <input class="app-search__input" type="search" placeholder="Search">
                <button class="app-search__button"><i class="fa fa-search"></i></button>
            </li>
            <!--Notification Menu-->
            <li class="dropdown">
                <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Show notifications">
                    <i class="fa fa-bell-o fa-lg"></i>
                </a>
                <ul class="app-notification dropdown-menu dropdown-menu-right">
                    <li class="app-notification__title">You have 1 new notifications.</li>
                    <div class="app-notification__content">
                        <li>
                            <a class="app-notification__item" href="javascript:;">
                                <span class="app-notification__icon">
                                    <span class="fa-stack fa-lg">
                                        <i class="fa fa-circle fa-stack-2x text-primary"></i><i class="fa fa-envelope fa-stack-1x fa-inverse"></i>
                                    </span>
                                </span>
                                <div>
                                    <p class="app-notification__message">Lisa sent you a mail</p>
                                    <p class="app-notification__meta">2 min ago</p>
                                </div>
                            </a>
                        </li>
                    </div>
                    <li class="app-notification__footer"><a href="#">See all notifications.</a></li>
                </ul>
            </li>
            <!-- User Menu-->
            <li class="dropdown">
                <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu">
                    <em class="fa fa-user fa-lg"></em>
                </a>
                <ul class="dropdown-menu settings-menu dropdown-menu-right">
                    <li><a class="dropdown-item" href="#"><em class="fa fa-cog fa-lg"></em> Settings</a></li>
                    <li><a class="dropdown-item" href="#"><em class="fa fa-user fa-lg"></em> Profile</a></li>
                    <li><a class="dropdown-item" href="/ParameterSystem"><em class="fa fa-flag-checkered"></em> Language</a> </li>
                    <li><a class="dropdown-item" href="#"><em class="fa fa-sign-out fa-lg"></em> Logout</a></li>
                </ul>
            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <ul class="app-menu">
            <li>
                <a class="app-menu__item active" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="app-menu__icon fa fa-home"></i><span class="app-menu__label">Home</span>
                </a>
            </li>

            <li class="treeview">
                <a class="app-menu__item" href="#" data-toggle="treeview">
                    <i class="app-menu__icon fa fa-user"></i><span class="app-menu__label">User</span><i class="treeview-indicator fa fa-angle-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li>
                        <a class="nav-link treeview-item" asp-area="" asp-controller="User" asp-action="Index"><i class="icon fa fa-circle-o"></i>User</a>
                    </li>
                    <li>
                        <a class="nav-link treeview-item" asp-area="" asp-controller="Tratamiento" asp-action="Index"><i class="icon fa fa-circle-o"></i>Treatment</a>
                    </li>
                    
                    <li>
                        <a class="treeview-item" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="icon fa fa-circle-o"></i> Privacy</a>
                    </li>

                </ul>
            </li>
            <!--<li><a class="app-menu__item" href="charts.html"><i class="app-menu__icon fa fa-pie-chart"></i><span
                  class="app-menu__label">Charts</span></a></li>-->

        </ul>
    </aside>
    <main class="app-content">
        <div class="app-title">
            <h1 class="page-title"><em class=" fa fa-pencil-square-o"></em> &nbsp; @ViewData["Titulo"] </h1>
        </div>
        @RenderBody()

    </main>


    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Presentacion - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <script src="~/plugins/js/jquery-3.3.1.min.js"></script>
    <script src="~/plugins/js/popper.min.js"></script>
    <script src="~/plugins/js/bootstrap.min.js"></script>
    <script src="~/plugins/js/main.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--<script src="~/js/site.js" asp-append-version="true"></script>-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
